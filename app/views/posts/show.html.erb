<div class = "post">
<h1><%= @post.title %></h1>
<small><%= @post.created_at.strftime("%b %d %Y") %></small>
<p><%= @post.body %></p>
<p>Category: <%= link_to @post.category.name, category_path(:id => @post.category.id) %></p>
<%= link_to "Edit Posts", edit_post_path %> | <%= link_to "Delete Post", @post, :confirm => "Are you sure you want to delete", :method => :delete %>
</div>
